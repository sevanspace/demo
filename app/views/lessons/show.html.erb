<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @lesson.title %>
</p>

<p>
  <b>Content:</b>
  <%= @lesson.content %>
</p>

<p>
  <b>Topic:</b>
  <%= @lesson.topic %>
</p>

<h2>Comments</h2>
<% @lesson.comments.each do |comment| %>
	<p>
			<b>Commenter:</b>
			<%= comment.commenter %>
	</p>
	
	<p>
		<b>Comment:</b>
		<%= comment.body %>
	</p>
<% end %>

<h2>Add a comment:</h2>
<%= form_for([@lesson, @lesson.comments.build]) do |f| %>
	<div class = "field">
		<%= f.label :commenter %><br/>
		<%= f.text_field :commenter %>
	</div>
	<div class="field">
		<%= f.label :body%><br/>
		<%= f.text_area :body %>
	</div>
	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>

<%= link_to 'Edit', edit_lesson_path(@lesson) %> |
<%= link_to 'Back', lessons_path %>
